{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Medical services that doctors can offer"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": ["in-person", "online", "nhs"],
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "duration": {
      "type": "integer",
      "required": true,
      "description": "Duration in minutes"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "description": "Price in GBP"
    },
    "parentService": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::service.service"
    },
    "subServices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::service.service",
      "mappedBy": "parentService"
    },
    "serviceType": {
      "type": "enumeration",
      "enum": ["main", "subcategory"],
      "default": "main",
      "required": true
    },
    "doctors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::doctor.doctor",
      "mappedBy": "services"
    }
  }
}
