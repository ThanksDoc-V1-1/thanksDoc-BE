{
  "kind": "collectionType",
  "collectionName": "service_requests",
  "info": {
    "singularName": "service-request",
    "pluralName": "service-requests",
    "displayName": "Service Request",
    "description": "Service requests from businesses to doctors"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "business": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::business.business",
      "required": true
    },
    "doctor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::doctor.doctor"
    },
    "service": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::service.service"
    },
    "urgencyLevel": {
      "type": "enumeration",
      "enum": ["low", "medium", "high", "emergency"],
      "required": true
    },
    "serviceType": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "estimatedDuration": {
      "type": "integer"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "accepted", "rejected", "in_progress", "completed", "cancelled"],
      "default": "pending"
    },
    "requestedAt": {
      "type": "datetime",
      "required": true
    },
    "acceptedAt": {
      "type": "datetime"
    },
    "rejectedAt": {
      "type": "datetime"
    },
    "rejectionReason": {
      "type": "text"
    },
    "rejectedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::doctor.doctor"
    },
    "completedAt": {
      "type": "datetime"
    },
    "scheduledAt": {
      "type": "datetime"
    },
    "requestedServiceDateTime": {
      "type": "datetime",
      "required": false
    },
    "totalAmount": {
      "type": "decimal"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": ["pending", "paid", "failed", "refunded"],
      "default": "pending"
    },
    "isPaid": {
      "type": "boolean",
      "default": false
    },
    "paidAt": {
      "type": "datetime"
    },
    "paymentMethod": {
      "type": "string"
    },
    "paymentIntentId": {
      "type": "string"
    },
    "chargeId": {
      "type": "string"
    },
    "currency": {
      "type": "string",
      "default": "GBP"
    },
    "paymentDetails": {
      "type": "text"
    },
    "notes": {
      "type": "text"
    },
    "cancelReason": {
      "type": "text"
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "feedback": {
      "type": "text"
    },
    "isBroadcasted": {
      "type": "boolean",
      "default": false,
      "private": true
    },
    "originalRequestId": {
      "type": "integer",
      "private": true
    }
  }
}
