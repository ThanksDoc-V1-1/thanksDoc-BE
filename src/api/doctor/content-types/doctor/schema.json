{
  "kind": "collectionType",
  "collectionName": "doctors",
  "info": {
    "singularName": "doctor",
    "pluralName": "doctors",
    "displayName": "Doctor",
    "description": "Doctor profiles for ThanksDoc platform"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "password": {
      "type": "string",
      "required": true,
      "private": true
    },
    "passwordResetToken": {
      "type": "string",
      "private": true
    },
    "passwordResetExpires": {
      "type": "datetime",
      "private": true
    },
    "emailVerificationToken": {
      "type": "string",
      "private": true
    },
    "emailVerificationExpires": {
      "type": "datetime",
      "private": true
    },
    "isEmailVerified": {
      "type": "boolean",
      "default": false
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "specialization": {
      "type": "string",
      "required": false
    },
    "licenseNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "yearsOfExperience": {
      "type": "integer",
      "required": false
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "latitude": {
      "type": "decimal",
      "required": false
    },
    "longitude": {
      "type": "decimal",
      "required": false
    },
    "address": {
      "type": "text",
      "required": true
    },
    "city": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "string",
      "required": true
    },
    "zipCode": {
      "type": "string",
      "required": true
    },
    "hourlyRate": {
      "type": "decimal",
      "required": false
    },
    "isAvailable": {
      "type": "boolean",
      "default": true
    },
    "isVerified": {
      "type": "boolean",
      "default": false
    },
    "serviceRadius": {
      "type": "integer",
      "default": 12,
      "description": "Maximum distance in miles for receiving service requests"
    },
    "verificationStatusUpdatedAt": {
      "type": "datetime"
    },
    "verificationStatusReason": {
      "type": "text"
    },
    "bio": {
      "type": "text"
    },
    "emergencyContact": {
      "type": "string"
    },
    "languages": {
      "type": "json"
    },
    "certifications": {
      "type": "json"
    },
    "services": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::service.service",
      "inversedBy": "doctors"
    },
    "complianceDocuments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::compliance-document.compliance-document",
      "mappedBy": "doctor"
    },
    "professionalReferences": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::professional-reference.professional-reference",
      "mappedBy": "doctor"
    },
    "referenceSubmissions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::professional-reference-submission.professional-reference-submission",
      "mappedBy": "doctor"
    }
  }
}
