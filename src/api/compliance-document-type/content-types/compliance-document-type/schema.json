{
  "kind": "collectionType",
  "collectionName": "compliance_document_types",
  "info": {
    "singularName": "compliance-document-type",
    "pluralName": "compliance-document-types",
    "displayName": "Compliance Document Type",
    "description": "Configurable document types for doctor compliance requirements"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "key": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z_]+$"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "required": {
      "type": "boolean",
      "default": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "validationRules": {
      "type": "json"
    },
    "allowedFileTypes": {
      "type": "json",
      "default": ["pdf", "doc", "docx", "jpg", "jpeg", "png"]
    },
    "maxFileSize": {
      "type": "integer",
      "default": 10485760,
      "min": 1024,
      "max": 52428800
    },
    "autoExpiry": {
      "type": "boolean",
      "default": false,
      "description": "Whether this document type has automatic expiry based on validity period"
    },
    "validityYears": {
      "type": "integer",
      "min": 1,
      "max": 10,
      "description": "Number of years this document type is valid for (when autoExpiry is enabled)"
    },
    "expiryWarningDays": {
      "type": "integer",
      "default": 30,
      "min": 1,
      "max": 365,
      "description": "Number of days before expiry to show warning status"
    }
  }
}
